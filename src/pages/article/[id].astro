---
import articles from '../../data/articles.js';
import Layout from '../../layouts/Layout.astro';
import AddToCartButton from '../../components/AddToCartButton.jsx';



export async function getStaticPaths() {
  return articles.map((article) => ({
    params: { id: article.id.toString() }, // Assurez-vous que l'ID est une chaîne
  }));
}

const { id } = Astro.params;
const article = articles.find((a) => a.id === Number(id));
---
<Layout >
  {article ? (
    <>
      <html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Produit</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #13151a;
      }

      /* Conteneur principal */
      .product-page {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 800px;
        margin: 0 auto;
        margin-top: 10px;
        padding: 16px;
        border: 1px solid #727171;
        border-radius: 8px;
        background-color: #13151a;
      }

      /* Conteneur image + description */
      .product-container {
        display: flex;
        width: 100%;
        margin-bottom: 16px;
        color: white;
      }

      /* Image du produit */
      .product-image {
        max-width: 50%;
        height: auto;
        border-radius: 8px;
      }

      /* Description et prix */
      .product-details {
        flex: 1;
        margin-left: 16px;
        display: flex;
        flex-direction: column;
      }

      /* Carré de description */
      .product-description {
        flex: 1;
        max-height: 200px;
        overflow-y: auto;
        padding: 12px;
        background-color: #13151a;
        border: 1px solid #727171;
        border-radius: 4px;
        font-size: 14px;
        line-height: 1.4;
        margin-bottom: 16px;
      }

      /* Prix */
      .product-price {
        font-weight: bold;
        font-size: 18px;
        text-align: right;
        margin-bottom: 16px;
      }
    </style>
  </head>
  <body>
    <div class="product-page">
      <!-- Conteneur principal : image et détails -->
      <div class="product-container">
        <!-- Image du produit -->
        <img src={article.image} alt="Produit" class="product-image" />

        <!-- Détails : Description et prix -->
        <div class="product-details">
          <!-- Description avec défilement -->
          <div class="product-description">
            {article.description}
          </div>

          <!-- Prix -->
          <div class="product-price">
            {article.price}€
          </div>
        </div>
      </div>
      <div class="button-wrapper">
        <AddToCartButton client:load item={article}/>
      </div>
    </div>
  </body>
</html>
    </>
  ) : (
    <p>Article introuvable.</p>
  )}
</Layout>

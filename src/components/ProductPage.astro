import React from 'react';
import AddToCartButton from '../components/AddToCartButton.jsx';

const product = {
  image: '/src/images/test.png',
  description: `
    Ce produit est incroyable. Voici une description très longue qui nécessite un défilement pour être totalement visible dans l'espace dédié. Vous pouvez l'utiliser de différentes manières et profiter de ses nombreux avantages.     Ce produit est incroyable. Voici une description très longue qui nécessite un défilement pour être totalement visible dans l'espace dédié. Vous pouvez l'utiliser de différentes manières et profiter de ses nombreux avantages.
